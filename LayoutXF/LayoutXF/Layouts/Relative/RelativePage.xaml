<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutXF.Layouts.Relative.RelativePage">
    <ContentPage.Content>
        <RelativeLayout>
            <RelativeLayout BackgroundColor="Blue" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.5, Constant=50}"></RelativeLayout>
            <RelativeLayout BackgroundColor="Green" 
                            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView, Property=X, Factor=1, Constant=20}" 
                            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, Property=Y, Factor=1, Constant=20}"
                            ></RelativeLayout>
            <RelativeLayout BackgroundColor="Red" Margin="200" WidthRequest="100" HeightRequest="100" x:Name="Vermelho"></RelativeLayout>
            
            
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>